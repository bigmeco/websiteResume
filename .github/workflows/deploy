name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main  # Используйте ветку, с которой должен производиться деплой

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2

    # Установите все необходимые зависимости и окружение для сборки вашего проекта
    - name: Setup Java
      uses: actions/setup-java@v2
      with:
        distribution: 'temurin' # или другой дистрибутив Java, который вы используете
        java-version: '11' # Указывайте версию Java, требуемую для вашего проекта

    # Добавьте шаги для сборки вашего проекта, если это необходимо
    - name: Build the project
      run: |
        ./gradlew build

    # После сборки, содержимое для размещения будет в папке .kobweb/site
    - name: Deploy to GitHub Pages
      uses: JamesIves/github-pages-deploy-action@4.1.4
      with:
        branch: gh-pages # Указывайте ветку GitHub Pages, на которую должен производиться деплой
        folder: .kobweb/site # Указывайте папку, откуда брать файлы для деплоя
        token: ${{ secrets.GITHUB_TOKEN }} # Токен для доступа к репозиторию
